{% extends "layout-admin.html.twig" %}

{% block title %}
    Utilisateurs
{% endblock %}

{% block main %}
    <!-- Content -->
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mb-3">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for user in users %}
            <div class="col">
                <div class="card h-100">
                    {% if user.image is empty %}
                    <img src="/assets/img/default_profile.png" class="card-img-top" alt="default_image">
                    {% else %}
                    <img src="/assets/img/{{ user.image }}" class="card-img-top" alt="profile_image">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ user.name }}
                        {% if 'admin' == user.role %}
                        - ({{ user.role }})
                        {% endif %}
                        </h5>
                        <p class="card-text">{{ user.email }}</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="row justify-content-between">
                            <div class="col">
                                <ul class="list-inline text-center">
                                    <li class="list-inline-item">
                                        <a href="/admin/modify-user-{{ user.id }}"><i class="fa-solid fa-pencil"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="/admin/delete-user-{{ user.id }}"><i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}

